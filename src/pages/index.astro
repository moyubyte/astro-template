---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

// Get server-side render time
const renderTime = new Date();
const formattedTime = renderTime.toLocaleString("en-US", {
  year: "numeric",
  month: "2-digit",
  day: "2-digit",
  hour: "2-digit",
  minute: "2-digit",
  second: "2-digit",
  hour12: false,
});

const headers = Object.fromEntries(
  Array.from(Astro.request.headers.entries()).filter(([key]) => key !== 'x-scf-private-environment')
);

// 尝试获取本地上下文信息，EdgeOne 的 request.eo 可能在这里
const localsInfo = JSON.stringify(Astro.locals || {}, null, 2);

// 尝试直接从 request 对象获取 eo 信息 (类型转换以绕过 TS 检查)
// 注意：在开发环境 (npm run dev) 下这通常是 undefined
const requestAny = Astro.request as any;
const eoInfo = requestAny.eo ? JSON.stringify(requestAny.eo, null, 2) : "request.eo is undefined";
---

<Layout title="Welcome to Astro.">
  <main>
    <h1>Welcome to <span class="text-gradient">Astro</span></h1>
    <p class="instructions">
      Check out the <code>src/pages</code> directory to get started.<br />
      <strong>Code Challenge:</strong> Tweak the "Welcome to Astro" message above.<br
      />
      <strong>Server Render Time:</strong>
      <span class="render-time">{formattedTime}</span>
    </p>

    <!-- Debug Info for Locals -->
    <div class="instructions" style="margin-top: 1rem; border-color: #da62c4;">
      <strong>Astro.locals:</strong>
      <pre style="overflow-x: auto; white-space: pre-wrap; font-size: 0.8em;">{localsInfo}</pre>
    </div>

    <!-- Debug Info for Request.eo -->
    <div class="instructions" style="margin-top: 1rem; border-color: #4f39fa;">
      <strong>request.eo:</strong>
      <pre style="overflow-x: auto; white-space: pre-wrap; font-size: 0.8em;">{eoInfo}</pre>
    </div>

    <ul role="list" class="link-card-grid">
      <Card
        href="https://docs.astro.build/"
        title="Documentation"
        body="Learn how Astro works and explore the official API docs."
      />
      <Card
        href="https://astro.build/integrations/"
        title="Integrations"
        body="Supercharge your project with new frameworks and libraries."
      />
      <Card
        href="https://astro.build/themes/"
        title="Themes"
        body="Explore a galaxy of community-built starter themes."
      />
      <Card
        href="https://astro.build/chat/"
        title="Chat"
        body="Come say hi to our amazing Discord community. ❤️"
      />
    </ul>
    
    <div class="headers-section">
      <h2>Request Headers</h2>
      <ul class="headers-list">
        {Object.entries(headers).map(([key, value]) => (
          <li>
            <span class="header-key">{key}:</span> {value}
          </li>
        ))}
      </ul>
    </div>

    <div class="upload-section">
      <h2>Upload Image to S3</h2>
      <form id="upload-form" class="upload-form">
        <input type="file" id="file-input" class="file-input" accept="image/*" required />
        <button type="submit" class="upload-btn">Upload</button>
      </form>
      <div id="upload-result" style="display: none;"></div>
    </div>
  </main>
</Layout>

<script>
  const form = document.getElementById('upload-form');
  const fileInput = document.getElementById('file-input') as HTMLInputElement;
  const resultDiv = document.getElementById('upload-result');
  const submitBtn = form?.querySelector('button');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    if (!fileInput.files || fileInput.files.length === 0) return;
    
    const file = fileInput.files[0];
    const formData = new FormData();
    formData.append('file', file);
    
    if (submitBtn) {
      submitBtn.disabled = true;
      submitBtn.textContent = 'Uploading...';
    }
    
    if (resultDiv) {
      resultDiv.style.display = 'none';
      resultDiv.textContent = '';
      resultDiv.style.color = 'white';
    }

    try {
      const response = await fetch('/api/upload', {
        method: 'POST',
        body: formData,
      });

      const data = await response.json();

      if (response.ok) {
        if (resultDiv) {
          resultDiv.style.display = 'block';
          resultDiv.innerHTML = `<strong>Success!</strong><br><a href="${data.url}" target="_blank" style="color: #4f39fa;">${data.url}</a>`;
        }
      } else {
        throw new Error(data.message || 'Upload failed');
      }
    } catch (error: any) {
      if (resultDiv) {
        resultDiv.style.display = 'block';
        resultDiv.style.color = '#ff6b6b';
        resultDiv.textContent = `Error: ${error.message}`;
      }
    } finally {
      if (submitBtn) {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Upload';
      }
    }
  });
</script>

<style>
  :root {
    --astro-gradient: linear-gradient(0deg, #4f39fa, #da62c4);
  }

  h1 {
    margin: 2rem 0;
    text-align: center;
  }

  main {
    margin: auto;
    padding: 1em;
    max-width: calc(60ch + 80px);
  }

  .text-gradient {
    font-weight: 900;
    background-image: var(--astro-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 100% 200%;
    background-position-y: 100%;
    border-radius: 0.4rem;
    animation: pulse 4s ease-in-out infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      background-position-y: 0%;
    }
    50% {
      background-position-y: 80%;
    }
  }

  .instructions {
    line-height: 1.6;
    margin: 1rem 0;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 0.5rem;
    color: var(--color-text);
  }

  .instructions code {
    font-size: 0.8em;
    font-weight: 700;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }

  .instructions strong {
    color: rgb(var(--accent-light));
  }

  .render-time {
    color: rgb(var(--accent-light));
    font-family: Menlo, Monaco, "Courier New", monospace;
    font-size: 0.9em;
    font-weight: 600;
  }

  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 1rem;
    padding: 0;
  }

  .headers-section, .upload-section {
    margin-top: 2rem;
    padding: 1.5rem;
    border-radius: 0.5rem;
    background: rgba(var(--accent-light), 10%);
    border: 1px solid rgba(var(--accent-light), 25%);
  }

  .headers-section h2, .upload-section h2 {
    margin-top: 0;
    color: rgb(var(--accent-light));
  }

  .headers-list {
    list-style: none;
    padding: 0;
    font-family: Menlo, Monaco, "Courier New", monospace;
    font-size: 0.85em;
    word-break: break-all;
  }

  .headers-list li {
    margin-bottom: 0.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: 0.25rem;
  }

  .header-key {
    color: #da62c4;
    font-weight: bold;
  }

  .upload-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .file-input {
    padding: 0.5rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 0.25rem;
    background: rgba(0, 0, 0, 0.2);
    color: white;
  }

  .upload-btn {
    padding: 0.75rem;
    background: var(--astro-gradient);
    color: white;
    border: none;
    border-radius: 0.25rem;
    font-weight: bold;
    cursor: pointer;
    transition: opacity 0.2s;
  }

  .upload-btn:hover {
    opacity: 0.9;
  }

  .upload-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  #upload-result {
    margin-top: 1rem;
    padding: 1rem;
    border-radius: 0.25rem;
    background: rgba(0, 0, 0, 0.3);
    word-break: break-all;
  }
</style>
